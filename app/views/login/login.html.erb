<style>
    fieldset {
        border:0;
    }

    #erro {
        border: 1px solid #FF0000;
        color: #FF0000;
        margin: 15px;
        padding: 15px;
    }
</style>
<% if @error.to_s.size > 0 %>
    <div id="erro">
        <%= @error %>
    </div>
<% end %>

<form method="post">
    <fieldset>
        Login
        <input type="text" name="login" />
    </fieldset>
    <fieldset>
        Senha
        <input type="password" name="senha" />
    </fieldset>

    <input type="Submit" name="enviar" value="Enviar" />
</form>
